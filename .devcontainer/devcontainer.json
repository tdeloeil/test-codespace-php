{
  "name": "PHP + MySQL Dev Environment",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "php",
  "workspaceFolder": "/var/www/html",
  
  "forwardPorts": [8080, 3306, 8081, 3000, 3100, 3200, 9090],
  "portsAttributes": {
    "8080": {"label": "Application PHP"},
    "3306": {"label": "MySQL"},
    "8081": {"label": "phpMyAdmin"},
    "3000": {"label": "Grafana"},
    "3100": {"label": "Loki"},
    "3200": {"label": "Tempo"},
    "9090": {"label": "Prometheus"}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ikappas.composer",
        "bmewburn.vscode-intelephense-client",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/bin/php"
      }
    }
  },
  
  "postCreateCommand": "if [ -f composer.json ]; then composer install; fi",
  
  "remoteUser": "vscode"
}